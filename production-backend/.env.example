# Server Configuration
PORT=3000
NODE_ENV=production

# Security
JWT_SECRET=your-very-long-random-secret-key-here
ADMIN_PASSWORD=change-this-secure-password

# Database
DB_PATH=./data/updates.db

# Storage
STORAGE_PATH=./storage/bundles
MAX_BUNDLE_SIZE=104857600  # 100MB in bytes

# Rate Limiting
RATE_LIMIT_WINDOW=15      # minutes
RATE_LIMIT_MAX=100        # requests per window

# CORS (comma-separated origins)
ALLOWED_ORIGINS=https://your-app.com,capacitor://localhost,http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/server.log

# Analytics
ANALYTICS_RETENTION_DAYS=90

# Bundle Management
BUNDLE_CLEANUP_ENABLED=true
BUNDLE_MAX_AGE_DAYS=30

# CDN Configuration (optional)
CDN_URL=https://cdn.your-domain.com
CDN_ENABLED=false

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ALERT_EMAIL=admin@your-domain.com